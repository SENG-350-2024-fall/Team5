// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Patient {
  pid Int @id @default(autoincrement())
  first_name String
  last_name String
  address String?
  DOB DateTime
  password String
  PHN String
  triage_application TriageApplication?
}

model HealthCareWorker {
  hid Int @id @default(autoincrement())
  last_name String
  username String
  password String
  job_type String
  first_name String?
  works_at HealthCareWorkerWorksAtOffice[]
}

model Office {
  oid Int @id @default(autoincrement())
  location String
  days_open String?
  hours_open String?
  phone_number String?
  ave_wait_time DateTime?
  name String
  works_at HealthCareWorkerWorksAtOffice[]
}

model HealthCareWorkerWorksAtOffice {
  health_care_worker HealthCareWorker @relation(fields: [hid], references: [hid])
  hid Int 
  office Office @relation(fields: [oid], references: [oid])
  oid Int
  days_working String

  @@id([hid,oid])
}

model TriageApplication {
  tid Int @id @default(autoincrement())
  patient Patient @relation(fields: [patientID], references: [pid], onDelete: Cascade)
  patientID Int @unique
  time_created DateTime
  status String
  patient_history String?
  patient_medication String?
  symptoms Symptom[]
}

model Symptom {
  sid Int @id @default(autoincrement())
  triage_application TriageApplication @relation(fields: [triage_application_id], references: [tid], onDelete: Cascade)
  triage_application_id Int 
  name String
  pain_scale Int
  body_location String
  time_started DateTime @default(now())
  other_info String?
}

